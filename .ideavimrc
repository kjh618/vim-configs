""""""""""""""""""""""""""""""""""""""""""""""""""
" kjh's .ideavimrc


""""""""""""""""""""""""""""""""""""""""""""""""""
" Plugins

set surround
set commentary
set highlightedyank


""""""""""""""""""""""""""""""""""""""""""""""""""
" Options

" UI options
set number
set relativenumber
set showmode
set showcmd

" Editor UI options
set scrolloff=2

" Search options
set incsearch
"set hlsearch
set ignorecase
set smartcase

" IdeaVim specific options
set ideastatusicon=gray
set ideajoin
set idearefactormode=keep


""""""""""""""""""""""""""""""""""""""""""""""""""
" Mappings

let mapleader = " "

" Window movements
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

" Search mappings
nmap <Leader>/ <Action>(Find)
nmap <Leader>s <Action>(Replace)

" IDE

nmap K <Action>(QuickJavaDoc)
map <Leader>t <Action>(Scala.TypeInfo)

nmap <Leader>rn <Action>(RenameElement)

nmap <Leader>d <Action>(ShowErrorDescription)
