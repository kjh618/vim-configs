" kjh's .vimrc

syntax on
filetype plugin indent on

" UI
set number
set wildmenu
set showcmd
set ruler

" Behavior
set mouse=a
set history=200

" Editor
set showmatch
set backspace=indent,eol,start
set hidden
set autoread

" Indentation
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent

" Search
set hlsearch
set incsearch
set ignorecase
set smartcase

